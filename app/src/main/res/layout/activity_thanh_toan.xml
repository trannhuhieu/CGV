<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".muc.thanhtoan.ThanhToan"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarthanhtoan"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|enterAlways"
        app:title="Thanh toán"
        app:titleMarginBottom="10dp"
        android:gravity="center"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgp"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/phim5"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">
                <TextView
                    android:id="@+id/tenp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="flash"
                    android:textSize="21dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/ngay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thứ Tư 28 tháng 6, 2023"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/bd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" -- "
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/kt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:27"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CGV Aeon Tân Phú"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ghế: "
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/ghe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A1"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng thanh toán: "
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/red"/>
                    <TextView
                        android:id="@+id/tongtien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/red"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" đ"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/red"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#dedede"
                    android:text="thông tin vé"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:text="Số lượng"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"/>
                    <TextView
                        android:id="@+id/tongve"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:gravity="center_vertical|right"
                        android:paddingHorizontal="10dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="290dp"
                        android:layout_height="50dp"
                        android:text="Tổng"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"/>
                    <TextView
                        android:id="@+id/tong"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:text="150000"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|right"
                        android:paddingHorizontal="10dp"/>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:text="đ"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center_vertical|left"
                        android:paddingRight="10dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#dedede"
                    android:text="phương thức giảm giá"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_giamgia"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#dedede"
                    android:text="Tổng kết"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="290dp"
                        android:layout_height="50dp"
                        android:text="Tổng cộng bao gồm VAT"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"/>

                    <TextView
                        android:id="@+id/tongvat"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:text="100000"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|right"
                        android:paddingHorizontal="10dp"/>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:text="đ"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center_vertical|left"
                        android:paddingRight="10dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="340dp"
                        android:layout_height="50dp"
                        android:text="Giảm giá"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"/>
                    <TextView
                        android:id="@+id/giam"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="0 đ"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|right"
                        android:paddingHorizontal="10dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="290dp"
                        android:layout_height="50dp"
                        android:text="Còn lại"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"/>
                    <TextView
                        android:id="@+id/conlai"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:text="100000"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:gravity="center_vertical|right"
                        android:paddingHorizontal="10dp"/>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:text="đ"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center_vertical|left"
                        android:paddingRight="10dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#dedede"
                    android:text="Thanh toán"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Thẻ ATM"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:drawableRight="@drawable/close"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Ví AriPay"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="ZaloPay"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#dedede"
                    android:paddingHorizontal="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tôi đồng ý với "
                            android:textSize="17dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tv_dk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Điều Khoản Sử Dụng"
                            android:textSize="17dp"
                            android:textColor="@color/red"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" và đang mua"
                            android:textSize="17dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vé cho người có độ tuổi phù hợp"
                        android:textSize="17dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/btn_thanhtoan"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Thanh toán"
                        android:backgroundTint="@color/red"
                        android:background="@drawable/botron_login"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginHorizontal="10dp"
                        android:padding="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>